<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:background="@drawable/fondodegradado"
    android:orientation="vertical"
    tools:context="testing.gps_service.MainActivity">

    <TextView

        android:textColor="@color/colorTextViews"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenadas:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:textColor="@color/colorTextViews"
        android:gravity="center_horizontal"
        android:id="@+id/etlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@color/colorTextViews"
        android:layout_below="@id/etlat"
        android:gravity="center_horizontal"
        android:id="@+id/etlon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorTextViews"
        android:layout_below="@id/etlon"
        android:gravity="center_horizontal"
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/botonestados"
        android:textColor="@color/colorTextViews"
        android:layout_below="@id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comenzar seguimiento"
        android:id="@+id/button"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/botonestados"
        android:textColor="@color/colorTextViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detener seguimiento"
        android:id="@+id/button2"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</LinearLayout>
